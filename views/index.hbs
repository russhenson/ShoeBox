    <div class="cover-photo">
        <img src="/images/coverphoto.jpg" alt="cover photo">
    </div>

    <div class="featured-container">
        <h3 class="text-uppercase featured-title">
            Featured
        </h3>

        <div class="featured-cards row">
            {{#each product}}

            <a class="product-card" href="/product/{{_id}}">
                <div>
                    <img class="product-img" src="{{image.[0]}}" alt="presto">
                    <h6 class="product-brand">{{brand}}</h6>
                    <h5 class="product-name">{{nickname}}</h5>
                    <h5 class="product-price text-uppercase">{{price}} PHP</h5>
                </div>
            </a>

            {{/each}}
            
        
        </div>
        
    </div>

    <div class="new-arrivals-container">
        <h3 class="text-uppercase new-arrivals-title">
            New Arrivals
        </h3>

        <div class="new-arrivals-cards row">
            {{#each newArrival}}

            <a class="product-card" href="/product/{{_id}}">
                <div>
                    <img class="product-img" src="/{{image.[0]}}" alt="presto">
                    <h6 class="product-brand">{{brand}}</h6>
                    <h5 class="product-name">{{nickname}}</h5>
                    <h5 class="product-price text-uppercase">{{price}} PHP</h5>
